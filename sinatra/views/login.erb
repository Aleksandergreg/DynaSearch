<%# views/login.erb %>
<%# The block displaying locals[:error] has been removed from here %>

<h2>Log In</h2>
<form action="/api/login" method="post">
  <dl>
    <dt>Username:
      <%# Use the passed username local for repopulation if login fails %>
    <dd><input type="text" name="username" size="30" value="<%= locals[:username] || '' %>">
    <dt>Password:
    <dd><input type="password" name="password" size="30">
  </dl>
  <div class="actions"><input type="submit" value="Log In"></div>
</form>