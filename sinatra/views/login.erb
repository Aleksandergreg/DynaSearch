<%# views/login.erb %>
<%# If there's an error, display it: %>
<% if locals[:error] %>
  <div class="error"><strong>Error:</strong> <%= locals[:error] %></div>
<% end %>

<h2>Log In</h2>
<form action="/api/login" method="post">
  <dl>
    <dt>Username:
    <dd><input type="text" name="username" size="30" value="<%= params[:username] %>">
    <dt>Password:
    <dd><input type="password" name="password" size="30">
  </dl>
  <div class="actions"><input type="submit" value="Log In"></div>
</form>
