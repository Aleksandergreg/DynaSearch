<div>
  <input id="search-input" placeholder="Search..." value="<%= params[:q] %>" />
  <%# Removed onclick attribute and added id="search-button" %>
  <button id="search-button">Search</button> 
</div>

<div id="results">
  <%# Check if @search_results is not nil before iterating %>
  <% @search_results&.each do |result| %>
    <div>
      <h2>
        <a class="search-result-title" href="<%= result['url'] %>">
          <%= result['title'] %>
        </a>
      </h2>
      <%# Check if description key exists and is not blank before trying to display it %>
      <% if result['description'] && !result['description'].strip.empty? %>
        <p class="search-result-description">
          <%= result['description'] %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>

